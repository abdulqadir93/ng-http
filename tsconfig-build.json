{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./lib",
    "stripInternal": true
  },
  "files": [
    "./index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
